<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/evgeni_evgeniev_lpkk3wtkc_g_unsplash">

        <TextView
            android:id="@+id/textView"
            android:layout_width="197dp"
            android:layout_height="48dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Testy na dziś"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/border"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/StroopTestCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_color_palette_96"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Test Stroop'a"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/SwitchTrailTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="156dp"
                                    android:src="@drawable/icons8_switch_96"></ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:text="Zmiana ścieżki"
                                    android:textAlignment="center"
                                    android:textSize="18dp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ReitanTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_connect_96"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Test Reitan'a"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/LetterCancellationTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="156dp"
                                    android:src="@drawable/icons8_letters_96"></ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:text="Litery (łatwy)"
                                    android:textAlignment="center"
                                    android:textSize="18dp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/LetterCancellationTestMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_letters_96_m"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Litery (średni)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/LetterCancellationTestHard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="156dp"
                                    android:src="@drawable/icons8_letters_96_h"></ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:text="Litery (trudny)"
                                    android:textAlignment="center"
                                    android:textSize="18dp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/DigitSubTestCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_key_not_in_vehicle_96"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="szyfr (łatwy)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/DigitSubTestCardMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="156dp"
                                    android:src="@drawable/icons8_key_not_in_vehicle_96_m"></ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:text="szyfr (średni)"
                                    android:textAlignment="center"
                                    android:textSize="18dp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/DigitSubTestCardHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_key_not_in_vehicle_96_h"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="szyfr (trudny)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MemoryScanTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_brain_96"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Skan pamięci (łatwy)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/MemoryScanTestMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_brain_96_m"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Skan pamięci (średni)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/MemoryScanTestHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_brain_96_h"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Skan pamięci (trudny)"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/AgilityTestCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="156dp"
                                android:src="@drawable/icons8_target_96"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:text="Test zwinności"
                                android:textAlignment="center"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>



        </ScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_menu_64__1_"
            android:onClick="openDrawer"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <!-- Your content for the drawer -->
        <FrameLayout
            android:id="@+id/frameLayoutStroop"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border2"
            android:onClick="openStroopTestActivity">

            <ImageView
                android:id="@+id/imageViewStroopIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_color_palette_48"
                android:layout_gravity="center_vertical"
                android:onClick="openStroopTestActivity"/>

            <TextView
                android:id="@+id/textViewStroop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageViewStroopIcon"
                android:layout_marginStart="75dp"
                android:layout_marginTop="20dp"
                android:text="Test Stroop'a"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="openStroopTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutReitan"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/border2"
            android:onClick="openReitanTestActivity">

            <ImageView
                android:id="@+id/imageViewReitanIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_connect_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewReitan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutStroop"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Test Reitan'a"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openReitanTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutSwitch"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="174dp"
            android:background="@drawable/border2"
            android:onClick="openSwitchTestActivity">

            <ImageView
                android:id="@+id/imageViewSwitchIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_switch_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutReitan"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Test zmiany ścieżki"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openSwitchTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutAgility"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="253dp"
            android:background="@drawable/border2"
            android:onClick="openAgilityTestActivity">

            <ImageView
                android:id="@+id/imageViewAgilityIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_target_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewAgility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutSwitch"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Test zwinności"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openAgilityTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutLetterCancel"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="332dp"
            android:background="@drawable/border2"
            android:onClick="openLetterTestActivity">

            <ImageView
                android:id="@+id/imageViewLetterIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_letters_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutAgility"
                android:layout_marginTop="10dp"
                android:layout_marginStart="75dp"
                android:text="Test anulowania liter"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openLetterTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutSubCancel"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="411dp"
            android:background="@drawable/border2"
            android:onClick="openSubTestActivity">

            <ImageView
                android:id="@+id/imageViewSubIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_key_not_in_vehicle_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutLetterCancel"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Test szyfrowania"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openSubTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutScanCancel"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/border2"
            android:onClick="openScanTestActivity">

            <ImageView
                android:id="@+id/imageViewScanIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_brain_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutSubCancel"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Test skanu pamięci"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openScanTestActivity"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/resultFrameLayout"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_marginTop="569dp"
            android:background="@drawable/border2"
            android:onClick="openResults">

            <ImageView
                android:id="@+id/imageViewresultImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icons8_brain_48"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frameLayoutScanCancel"
                android:layout_marginTop="20dp"
                android:layout_marginStart="75dp"
                android:text="Wyniki"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:onClick="openResults"/>
        </FrameLayout>


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>