<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gra polega na kliknięciu punktu na ekranie. Punkt należy kliknąć 10 razy aby ukończyć test. Każde nietrafienie w punkt skutkuje minusowymi punktami."
        android:textSize="18sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punktacja za test oparta jest na prędkości wykonania."
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zagraj" />
</LinearLayout>
